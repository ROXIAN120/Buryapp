    <!-- Estilo para textos con fuente personalizada, sombra azul y fondo personalizado -->
    <style name="apariencia_de_item_text">
        <item name="android:textSize">13sp</item> <!-- Tamaño de texto de 13sp -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de texto blanco -->
        <item name="android:fontFamily">@font/font2</item> <!-- Fuente personalizada -->
        <item name="android:shadowColor">#00CDFA</item> <!-- Color de sombra azul claro -->
