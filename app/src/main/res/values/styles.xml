<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para textos con un tamaño de 17sp, color blanco y sombra azul -->
    <style name="elige_otro_">
        <item name="android:textSize">17sp</item> <!-- Tamaño de texto de 17sp -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de texto blanco -->
        <item name="android:shadowColor">#3503FF</item> <!-- Color de sombra azul -->
        <item name="android:shadowDx">0</item> <!-- Desplazamiento en X de la sombra -->
        <item name="android:shadowDy">0</item> <!-- Desplazamiento en Y de la sombra -->
        <item name="android:shadowRadius">10</item> <!-- Radio de desenfoque de la sombra -->
    </style>

    <!-- Estilo para textos con un tamaño de 15sp, color blanco y sombra azul -->
    <style name="elige_otro2_">
        <item name="android:textSize">15sp</item> <!-- Tamaño de texto de 15sp -->
