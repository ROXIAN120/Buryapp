        <item name="android:shadowDy">0</item> <!-- Desplazamiento en Y de la sombra -->
        <item name="android:shadowRadius">10</item> <!-- Radio de desenfoque de la sombra -->
    </style>

    <!-- Estilo para textos con fuente personalizada, tamaño mayor y fondo personalizado -->
    <style name="apariencia_de_item_text2">
        <item name="android:textSize">18sp</item> <!-- Tamaño de texto de 18sp -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de texto blanco -->
        <item name="android:fontFamily">@font/font2</item> <!-- Fuente personalizada -->
