<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantilla_bury_app"
    tools:context="fragmentos_de_locales.barfragment.contenido_malavita.MalavitaFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/fondo_de_publicidad"
            android:layout_width="353dp"
            android:layout_height="869dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/ImagenView_description_fondo_de_malavita"
            android:src="@drawable/fondo_de_publicidad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView_malavita"
            android:layout_width="293dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/barra_para_titulo"
            android:fontFamily="@font/font2"
            android:paddingStart="99dp"
            android:paddingTop="12dp"
            android:paddingEnd="50dp"
            android:text="@string/Titulo_malavita"
            android:textAppearance="@style/elige_otro2_"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/viewPager_malavita"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059" />

        <ImageView
            android:id="@+id/fondo_de_texto_abierto"
            android:layout_width="150dp"
            android:layout_height="122dp"
            android:contentDescription="@string/ImagenView_description_fondo_de_malavita"
            android:src="@drawable/fondo_abierto_cerrado"
            app:layout_constraintBottom_toBottomOf="@+id/fondo_de_publicidad"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_publicidad"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_publicidad"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_publicidad"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/fondo_de_texto_menu"
            android:layout_width="150dp"
            android:layout_height="122dp"
            android:contentDescription="@string/ImagenView_description_fondo_de_malavita"
            android:src="@drawable/fondo_abierto_cerrado"
            app:layout_constraintBottom_toBottomOf="@+id/fondo_de_publicidad"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_publicidad"
            app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_publicidad"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_publicidad"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewabierto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewPager_malavita"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/font2"
            android:textAppearance="@style/elige_otro2_"
            app:layout_constraintBottom_toBottomOf="@+id/fondo_de_texto_abierto"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_texto_abierto"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_texto_abierto"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_texto_abierto" />

    <TextView
        android:id="@+id/textViewmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPager_malavita"
        android:layout_centerHorizontal="true"
        android:text="@string/TextView_menu"
        android:textSize="20sp"
        android:fontFamily="@font/font2"
        android:textAppearance="@style/elige_otro2_"
        app:layout_constraintBottom_toBottomOf="@+id/fondo_de_texto_menu"
        app:layout_constraintEnd_toEndOf="@+id/fondo_de_texto_menu"
        app:layout_constraintStart_toStartOf="@+id/fondo_de_texto_menu"
        app:layout_constraintTop_toTopOf="@+id/fondo_de_texto_menu" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="346dp"
            android:layout_height="137dp"
            android:layout_marginTop="410dp"
            android:layout_marginBottom="48dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewPager_malavita"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imagen_de_reserva"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="64dp"
                android:contentDescription="@string/ImagenView_description_fondo_de_malavita"
                android:src="@drawable/imagen_de_reserva" />

            <ImageView
                android:id="@+id/button_ir_al_local"
                android:layout_width="151dp"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/ImagenView_description_fondo_de_malavita"
                android:src="@drawable/imagen_de_ir_al_local" />
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager_malavita"
            android:layout_width="328dp"
            android:layout_height="371dp"
            app:layout_constraintBottom_toBottomOf="@+id/fondo_de_publicidad"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_publicidad"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_publicidad"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_publicidad"
            app:layout_constraintVertical_bias="0.499" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="267dp"
            android:layout_height="218dp"
            app:layout_constraintBottom_toBottomOf="@+id/fondo_de_publicidad"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_publicidad"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_publicidad"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_publicidad"
            app:layout_constraintVertical_bias="0.485"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/progressbar" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="263dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewPager_malavita"
            app:layout_constraintEnd_toEndOf="@+id/viewPager_malavita"
            app:layout_constraintStart_toStartOf="@+id/viewPager_malavita"
            app:layout_constraintTop_toTopOf="@+id/viewPager_malavita" />
        <Button
            android:id="@+id/button_eventos_malavita"
            android:layout_width="291dp"
            android:layout_height="70dp"
            android:background="@drawable/button_3"
            android:fontFamily="@font/font2"
            android:text="@string/Titulo_proximos_eventos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/fondo_de_publicidad"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/fondo_de_publicidad"
            app:layout_constraintTop_toTopOf="@+id/fondo_de_publicidad"
            app:layout_constraintVertical_bias="0.209" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>